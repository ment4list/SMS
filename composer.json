{
    "name": "mentalist/sms",
    "type": "library",
    "description": "A simple abstract SMS wrapper with support for templates",
    "keywords": [
        "Mentalist",
        "SMS"
    ],
    "homepage": "https://github.com/Mentalist/SMS",
    "license": "MIT",
    "authors": [
        {
            "name": "Jurgens Banninga",
            "email": "tooone777@gmail.com",
            "homepage": "https://github.com/ment4list",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3",
        "mentalist/logme": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Mentalist\\SMS\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mentalist\\SMS\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "path",
            "url": "~/Projects/Modules/php/Logme"
        }
    ]
}
